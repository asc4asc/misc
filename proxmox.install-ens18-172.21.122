#!/usr/bin/env bash

t1=tmp$$eth

arrIN=(${0//-/ })
net=${arrIN[1]} 
ip=${arrIN[2]} 
echo iface: $net with: $ip

cat > /tmp/${t1} << EOF
auto br0
iface br0 inet static
        address ${ip}.56/24
        gateway ${ip}.1
        bridge_ports ${net}
        up /usr/sbin/brctl stp br0 on
EOF

sudo cp /tmp/${t1} /etc/network/interfaces.d/${net} 

cat  >/etc/hosts << EOF
127.0.0.1       localhost
${ip} prox4m1.proxmox.com prox4m1

# The following lines are desirable for IPv6 capable hosts
::1     localhost ip6-localhost ip6-loopback
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
EOF

echo check 
hostname --ip-address

hostnamectl hostname prox4m1.proxmox.com

echo "deb [arch=amd64] http://download.proxmox.com/debian/pve bookworm pve-no-subscription" > /etc/apt/sources.list.d/pve-install-repo.list

echo as root no sudo! ????
sudo wget https://enterprise.proxmox.com/debian/proxmox-release-bookworm.gpg -O /etc/apt/trusted.gpg.d/proxmox-release-bookworm.gpg 

read

apt update && apt -y full-upgrade

read

apt install -y proxmox-default-kernel

read

apt install -y proxmox-ve postfix open-iscsi chrony

read

apt remove -y linux-image-amd64 'linux-image-6.1*'

update-grub

read
apt remove os-prober
